lightGreen = #86bb5d
lightGrey = #777
coolOrange = #FF7F00

body
    padding 0
.mapContainer
    position absolute
    width 100%
    #map-canvas
        position absolute
        height 100%
        width 100%
        z-index 1
.navbar-fixed-top
    margin-bottom 0
    padding-right 15px
.navbar-openify
    background-color white
    padding-top 10px
    background linear-gradient(top, #fff, rgba(250,250,250,0.8))
    border none
    font-size 16px
    .nav-collapse
        background-color rgba(250,250,250,0.9)
        z-index 100
        padding-left 10px
    .logoContainer
        text-align center
        img
            max-height 50px
    .nav
        li
            transition all ease 0.2s 
            a
                color lightGreen
                transition all ease 0.2s
            a:hover
                color coolOrange
@media (max-width: 767px)
    .navbar-openify
        padding-top 5px
        margin-bottom 0
        .logoContainer
            img
                max-height 40px

@media (max-width: 480px)
    .navbar-openify
        padding-top 5px
        margin-bottom 0
        .logoContainer
            img
                max-height 30px;            
footer
    position fixed
    bottom 0
    width 100%
    padding 40px 15px
    color white
    background-color rgb(60,60,60)
    margin-top 50px
    .follow
        font-size 30px
        line-height 2
        margin-right 10px
    p
        font-size 16px
    a
        transition all ease 0.2s
        color lightGreen
    a:hover
        color coolOrange
        cursor pointer
        text-decoration none
    .socialLinks
        a
            background-position 0 0
            height 64px
            width 80px
            margin-right 5px
            background-repeat no-repeat
            transition none
        a:hover
            background-position 0 -64px    
        .twitter
            background-image url('../images/social/twitterLink.png') 
        .facebook
            background-image url('../images/social/facebookLink.png')
        .github
            background-image url('../images/social/githubLink.png')
