darkBlue = #24274c

html, body
    height 100%
    margin 0

.center
    text-align center

header.jumbotron
    color white
    min-height 500px
    margin-bottom 0
    background-image url('/images/books.jpg')
    background-position center
    background-size cover
    height 100%
    h1
        letter-spacing 2px
        text-shadow 0 1px 15px rgba(0, 0, 0, 0.5);
        text-align center
        font-family Pacifico
    .search-logo
        height calc(50px \+ 30%);
        img
            height 100%
            max-width 100%
    .input-group
        width calc(225px \+ 30%)
        margin 50px auto
        position relative
        .loading
            position absolute
            right 60px
            z-index 2
            height 20px
            bottom 6px
        input
            &:hover, &:focus
                box-shadow none
                border-color #999
        .input-group-btn
            button
                border-top-right-radius 18px
                border-bottom-right-radius 18px
                padding 0
                img
                    height 32px
                    width 50px
    .search-query
        border-top-left-radius 18px
        border-bottom-left-radius 18px
    .btn:focus
        outline none

.results
    margin-bottom 150px
    margin-top 25px

.book
    position relative
    border solid 1px rgba(0, 0, 0, 0.1)
    padding 10px
    margin-bottom 10px
    p
        margin 0
    .book-thumbnail
        float left
        /*padding 0 10px*/
        margin-right 10px
    .book-title
        overflow hidden
    .book-details
        width 70%
        margin-top 10px
    .row
        margin-left 10px
        margin-right 10px
    .links
        position absolute
        bottom 20px
        right 20px
        .provider
            width 32px
            height 32px
            background-position 0% 0%
            float left
        .provider-disable
            background-position 0% 100%
        .provider-amazon
            background-image url('../images/provider/amazon.png')
        .provider-library
            background-image url('../images/provider/library.png')

footer
    z-index 2
    position fixed
    bottom 0
    width 100%
    height 6em
    color white
    letter-spacing 0.5px
    background-color rgba(26,31,58,0.5)
    padding-top 0.5em
    .footer-content
        text-align center
        .by
            display inline-block
            position relative
            line-height 1em
            text-transform capitalize
            &:before, &:after
                content ""
                position absolute
                border-top solid 1px rgba(255, 255, 255, 0.5)
                top 0.5em
                width 50%
            &:before
                right 100%
                margin-right 5px
            &:after
                left 100%
                margin-left 5px
    a
        text-align center
        display block
        width 55px
        margin auto
        img
            max-height 3em
