doctype 5
html(ng-app="librariesHub", lang="en")
    head
        meta charset="utf-8"
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        title biblioQuébec by Openify.it
        meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")

        // [if lt IE 9]>
            script(src="//html5shim.googlecode.com/svn/trunk/html5.js")

        link(href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/css/bootstrap-combined.min.css", rel="stylesheet")
        link(rel="stylesheet", href="/stylesheets/style.css")

        script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
        script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.5/angular.min.js")
        script(src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js")
        script(src="https://raw.github.com/BinaryMuse/ngInfiniteScroll/1.0.0/build/ng-infinite-scroll.min.js")

        if isDev
            script(type='text/javascript', src='/closure/base.js')
            script(type='text/javascript', src='/javascripts/deps.js')
        else
            script(type='text/javascript', src='/javascripts/compiled.js')

        script(type='text/javascript')
            goog.require('LibrariesHub.Application');
        script(type='text/javascript')
            var app = new LibrariesHub.Application();
            app.start();

    body
        .navbar.navbar-fixed-top(id="navbar")
            .navbar-inner.navbar-openify
                .container(ng-controller='MenuCtrl')
                    .row
                        a.btn.btn-navbar(ng-click="toggleMenu()")
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        .span4.offset4.logoContainer
                            img(src='../images/logo.png', alt='logo biblioQuébec')
                        .nav-collapse.collapse
                            ul.nav.pull-right
                                li
                                    a(href="#") À propos
        div(ng-view)
        footer.footer(ng-controller='FooterCtrl')
            .container.footerContainer
                .span4.pull-left.by
                    p Développé par vos amis @
                        a(href"http://openify.it") Openify.it
                    a(ng-click="scrollTop()") Haut de la page
                .span6.pull-right.socialLinks
                    a.pull-right.twitter(href="https://twitter.com/OpenifyIt")
                    a.pull-right.facebook(href="https://www.facebook.com/OpenifyIt")
                    a.pull-right.github(href="https://github.com/OpenifyIt")
                    span.follow.pull-right Suivez-nous :

        script
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-37980098-1']);
            _gaq.push(['_setDomainName', 'openify.it']);
            _gaq.push(['_trackPageview']);

            (function() {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();
